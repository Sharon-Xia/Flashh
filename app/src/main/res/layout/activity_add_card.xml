<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorActivityBackground1"
    tools:context=".AddCardActivity">


    <ImageView
        android:id="@+id/cancel_add_card"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/x_icon_foreground"
        />

    <EditText
        android:id="@+id/insert_question"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:hint="Enter the question here"
        android:inputType="textMultiLine"
        android:textAlignment="textStart" />

    <EditText
        android:id="@+id/insert_answerToQuestion"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignTop="@id/insert_question"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:background="@color/colorActivityBackground2"
        android:hint="Enter the answer here"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/insert_wrongAnswer1"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignTop="@id/insert_answerToQuestion"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:hint="Enter wrong answer option here"
        android:inputType="textMultiLine" />


    <EditText
        android:id="@+id/insert_wrongAnswer2"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignTop="@id/insert_wrongAnswer1"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:background="@color/colorActivityBackground2"
        android:hint="Enter another wrong answer option here"
        android:inputType="textMultiLine" />


    <ImageView
        android:id="@+id/save_card_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/check_icon_foreground"
        />
</RelativeLayout>